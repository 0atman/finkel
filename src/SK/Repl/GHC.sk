;;; Modules to re-export functions from `ghc' and `ghci'.

(module SK.Repl.GHC
  ;; DynFlags
  (PackageFlag ..)

  ;; HscMain
  hscParsedStmt

  ;; HscTypes
  (FixityEnv)
  (InteractiveContext ..)
  extendInteractiveContextWithIds

  ;; Id
  (Id)

  ;; InteractiveEval
  showModule

  ;; Linker
  extendLinkEnv
  initDynLinker
  linkModule
  showLinkerState
  unload

  ;; Name. This module re-exports `OccName' module.
  (Name)
  getName
  nameOccName
  occNameString

  ;; StaticFlags. This module has been removed in ghc >= 8.2.
  initStaticOpts

  ;; Var
  (Var)
  varType

  ;; GHCi
  evalStmt

  ;; GHCi.Message
  (EvalExpr ..)
  (EvalStatus_ ..)
  (EvalResult ..)
  (SerializableException ..)

  ;; GHCi.RemoteTypes
  (ForeignHValue))

(import DynFlags)
(import HscMain)                ; ghc
(import HscTypes)
(import InteractiveEval)
(import Linker)
